<div class="row">
    <div class='col-md-6'>
        <h2 style='font-family:cursive; color:green;'> Your Burgers!</h2>
        <ul class="list-group">
            {{#each allBurgers}}
                {{#unless devoured}}
            <li class="list-group-item" style='height:50px;'>{{burger_name}}<button value='{{id}}' style='float:right;' type="submit" class="btn btn-primary devour">Eat-Da-Burger!</button>
            </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h2 style='font-family:cursive; color:red;'> Burgers you ate!</h2>
        <ul class="list-group">
            {{#each allBurgers}}
                {{#if devoured}}
            <li class="list-group-item list-group-item-success">{{burger_name}} <span class="glyphicon glyphicon-ok"></span></li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>